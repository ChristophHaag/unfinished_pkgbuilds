optdepends=('kdebase-kdialog: needed for file dialogs in KDE'
            'ttf-google-fonts-git')
provides=("chromium")
options=('!emptydirs' '!strip')
noextract=("codecs-${pkgver}.deb" "codecs-extra-${pkgver}.deb")
